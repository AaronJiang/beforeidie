{include file='../header.tpl' title='发现' page='page-discover'}<p class='subtitle'>发现有趣的 Goals</p>{foreach $hotGoals as $goal}<div class='discover-goal-item'>	<p class='discover-goal-title'>		<a href='goal_page_details.php?goalID={$goal.GoalID}'>{$goal.Title}</a>	</p>		<p class='discover-goal-reason'>{$goal.Reason}</p>		<p class='discover-goal-creator'>By <a href='Person.php?act=pserson&userID={$goal.CreatorID}'>{$goal.Creator}<a></p>		<div class='goal-num-wap'>		<span><b>{$goal.StepsNum}</b> 规划</span>		<span>|</span>		<span><b>{$goal.LogsNum}</b> 记录</span>		<span>|</span>		<span><b>{$goal.CheersNum}</b> 鼓励</span>	</div></div>{/foreach}{include file='../footer.tpl'}