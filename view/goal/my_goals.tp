{include file='../header.tc' title='我的Goals' page='page-my-goals'}{literal}<script type="text/javascript">$(document).ready(function(){		//滑出命令栏	$('.goal-item').live("hover", function(event){		if(event.type == 'mouseenter'){			$(this).find('.goal-cmd-wap').animate({'bottom':'0px'}, 'fast');		} 		else if(event.type == 'mouseleave'){			$(this).find('.goal-cmd-wap').animate({'bottom':'-32px'}, 'fast');		};	});		//弹出放弃 Goal 警告框	$('.goal-cmd-drop').click(function(){		var goalTitle = $(this).data('title');		var isSure = confirm('确定放弃目标：' + goalTitle + "?");		if(!isSure){			return false;		}	});});</script>{/literal}<div id="content-goals">	{foreach $goals as $goal}	<div class='goal-item goal-item-{$goalType}'>			<!-- Goal info -->		<a class='goal-link' href='GoalC.php?act=details&goalID={$goal.GoalID}'>			<p class='goal-title'>{$goal.Title}</p>			<p class='goal-why'>{$goal.Reason}</p>			<div class='goal-info-wap'>				<p><b>{$goal.logsNum}</b> 记录</p>			</div>		</a>			<!-- 命令按钮 -->		<div class='goal-cmd-wap'>			<a class='goal-cmd goal-cmd-edit'				href="GoalC.php?act=edit&goalID={$goal.GoalID}"				>编辑</a>			<a class='goal-cmd goal-cmd-drop'				data-title="{$goal.Title}"				href="GoalC.php?act=drop_goal&goalID={$goal.GoalID}"				>放弃</a>		</div>	</div>	{/foreach}	</div>{include file='../footer.tc'}