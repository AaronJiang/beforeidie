{include file='../header.tc' title='个人资料' page='page-account-details'}<h3 class='page-title'>关于我</h3><table id='table-account-details'>	<tr>		<td class='item-header'>用户：</td>		<td>{$user.Name}</td>	</tr>	<tr>		<td class='item-header'>头像：</td>		<td>			<img id='avatar' src='{$user.Avatar}' />						<span>			{if $user.HasGravatar}			(<a title='去 Gravatar 更换你的头像' 				target='_blank'				href='http://en.gravatar.com/emails/' 				class='btn btn-tiny btn-cmd'>更换</a>)			{else}			(<a title='去 Gravatar 上传你的头像，全球通用哦，亲！' 				target='_blank'				href='http://en.gravatar.com/' 				class='btn btn-tiny btn-cmd'>上传</a>)						{/if}			</span>		</td>	</tr>	<tr>		<td>性别：</td>		<td>			<input type="radio" checked="checked" name="sex" value="male" /> 男			<input type="radio" name="sex" value="female" /> 女		</td>	</tr>	<tr>		<td class='item-header'>邮箱：</td>		<td>{$user.Email}</td>	</tr>		<tr>		<td class='item-header'>密码：</td>		<td>			<span>				(<a title='更改密码' href='AccountC.php?act=change_pwd' class='btn btn-tiny btn-cmd'>更改</a>)			</span>		</td>	</tr></table>{include file='../footer.tc'}