{include file='../header.tc' title='个人资料' page='page-account-details'}<p class='subtitle'>个人资料</p><table id='table-account-details'>	<tr>		<td class='item-header'>用户：</td>		<td>{$user.Name}</td>	</tr>	<tr>		<td class='item-header'>头像：</td>		<td>			<img id='avatar' src='{$user.Avatar}' />						<span>			{if $user.HasGravatar}			(<a title='在 Gravatar 更换你的头像' 				target='_blank' href='http://en.gravatar.com/emails/' 				class='small-cmd'>更换</a>)			{else}			(<a title='在 Gravatar 上传你的头像，全球认证哦，亲！' 				target='_blank' href='http://en.gravatar.com/' 				class='small-cmd'>上传</a>)						{/if}			</span>		</td>	</tr>	<tr>		<td class='item-header'>邮箱：</td>		<td>{$user.Email}</td>	</tr>		<tr>		<td class='item-header'>密码：</td>		<td>			<span>(<a title='更改密码' href='AccountC.php?act=change_pwd' class='small-cmd'>更改</a>)</span>		</td>	</tr></table>{include file='../footer.tc'}