{include file='../header.tc' title='友邻动态' page='page-followee-dynamics'}{literal}<script type='text/javascript' src='../js/goal-comment.js'></script><script type='text/javascript'>//获取 URL 中的参数function getQueryStr(name) {	var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)"); 	var r = window.location.search.substr(1).match(reg); 		if (r != null) 		return unescape(r[2]);		return null; }$(document).ready(function() {	//按需加载动态	function load_dyns( dynsType, userID, pageIndex, numPerPage, callback ){		// paras		var data = {			'userID': userID,			'pageIndex': pageIndex,			'numPerPage': numPerPage		};				// controller		var ctrl = '';			if( dynsType == 'others' ){			data['act'] = 'get_followee_dyns';			ctrl = 'PublicC.php';		} 		else {			data['act'] = 'get_about_me_dyns';			ctrl = 'DynC.php';		}		$.get(ctrl, data, function(data){			$('#dynamics').append(data);			$('#more-dyns').show();			callback();		});		}{/literal}	//初始化翻页参数	var userID = {$userID},		pageIndex = 1,		numPerPage = 20;{literal}	//获取 URL 中的动态类型	var dynsType = getQueryStr('type')? getQueryStr('type'): 'others';		//加载第一页	$('#more-dyns').hide();	load_dyns(dynsType, userID, pageIndex, numPerPage, function(){		//若动态条目少于 10，则不显示 more 按钮		if($('.dynamic-item').length < 10){			$('#more-dyns').detach();		}		else{			//加载更多动态			$('#more-dyns').click(function(){				pageIndex += 1;				load_dyns(dynsType, userID, pageIndex, numPerPage);			});		}	});});</script>{/literal}<div class='row'>	<div id='main-panel' class='span9'>		<div id='dynamic-sel-wap'>			<a class='dynamic-sel' href='DynC.php?act=dyns&type=others'>好友动态</a>			<a class='dynamic-sel' href='DynC.php?act=dyns&type=me'>与我相关</a>			</div>		<div id='dynamics' class='clearfix'></div>		<div id='more-dyns'>更多动态</div>	</div>	<div id='sidebar-panel' class='span3'>			{include file='../panel_header.tc' 			title='我的关注'			cmd="管理 / {$followeesNum}"			link="DynC.php?act=admin_followees&followerID={$userID}"		}					{foreach $followees as $fow}		<a title="{$fow.Username}" href="PersonC.php?act=person&userID={$fow.UserID}">			<img class='avatar avatar-multi' src="{$fow.Avatar}" />		</a>		{/foreach}	</div></div>{include file='../footer.tc'}